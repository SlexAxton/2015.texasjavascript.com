@import "./reset";
@import "./typebase";
@import "./flexboxgrid";

/* Global Styles */
body {
  font-family: "helvetica neue", helvetica, arial, sans-serif;
  background-color: brown;
  overflow: hidden;
}

/* Core Layout */

$sidebar-width = 220px;

.ribbon {
  width: $sidebar-width;
  height: 100%;
  position: fixed;
  /* sidebar-width offset */
  left: calc(33.33333% - 220px);
  background-color: #AAA;
}

.container-header {
  position: fixed;
  width: 33.33333%;
  top: 0;
  left: 0;
  height: 100%;
  overflow-y: auto;
  background-color: #CCC;
}

.container-article {
  position: fixed;
  right: 0;
  left: 33.333333%;
  top: 0;
  height: 100%;
  overflow-y: auto;
  padding-right: 16.66666%;
}
