@import "./reset";
@import "./typebase";
@import "./flexboxgrid";

/* Global Styles */
body {
  font-family: "helvetica neue", helvetica, arial, sans-serif;
  overflow: hidden;
}

/* Scrollbar */
::-webkit-scrollbar {
    width: 8px;
}

/* Scrollbar Track */
::-webkit-scrollbar-track {
    -webkit-border-radius: 10px;
    border-radius: 10px;
}

/* Scrollbar Handle */
::-webkit-scrollbar-thumb {
    -webkit-border-radius: 10px;
    border-radius: 10px;
    background: rgba(0,0,0,0.4);
}
::-webkit-scrollbar-thumb:window-inactive {
  background: rgba(0,0,0,0.4);
}

/* Core Layout */

$sidebar-width = 220px;

.ribbon {
  width: $sidebar-width;
  display: table-cell;
  background-color: #2A2C5C;
  color: #FFF;
  padding: 0 1rem;
  font-size: .75rem;
}

.container-header {
  position: fixed;
  width: 33.33333%;
  top: 0;
  left: 0;
  height: 100%;
  overflow-y: auto;
  background-color: #CCC;
  /* ribbon offset */
  padding-left: calc(33.33333% - 220px);
  box-sizing: border-box;
}

#header {
  display: table;
  height: 100%;
}

.container-article {
  position: fixed;
  right: 0;
  left: 33.333333%;
  top: 0;
  height: 100%;
  overflow-y: auto;
  padding-right: 16.66666%;
}
