@import "./reset";
@import "./typebase";
@import "./flexboxgrid";

/* Global Styles */
body {
  color: #444;
  background-color: #EEF3F6;
}

a {
  color: #E2273A;
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}

h1,h2,h3,h4,h5,h6 {
  color: #2A2C5C;
}

h1 em {
  font-weight: normal;
  font-size: 85%;
  letter-spacing: 0;
}

.title-date {
  margin: 0 0 .25rem;
}

/* Scrollbar */
::-webkit-scrollbar {
    width: 8px;
}

/* Scrollbar Track */
::-webkit-scrollbar-track {
    -webkit-border-radius: 10px;
    border-radius: 10px;
}

/* Scrollbar Handle */
::-webkit-scrollbar-thumb {
    -webkit-border-radius: 10px;
    border-radius: 10px;
    background: rgba(0,0,0,0.2);
}
::-webkit-scrollbar-thumb:window-inactive {
  background: rgba(0,0,0,0.2);
}

/* Core Layout */

$sidebar-width = 220px;

.row {
  margin-bottom: 2.5rem;
}

.row.small-bottom {
  margin-bottom: 0.5rem;
}

.container-article {
  padding: 5rem 1rem 1rem;
}

.ribbon {
  width: $sidebar-width;
  color: #FFF;
  text-align: right;
  font-size: .75rem;
  overflow-x: hidden;
  overflow-y: scroll;
  position: fixed;
  top: calc(192px + 1.75rem);
  bottom: 5px;
  z-index: 1;
  /* ribbon offset */
  padding-left: calc(40% - 220px - 5px - .25rem);
  padding-right: 0;
}

.ribbon .day .day-week:after {
  content: ',';
}

.ribbon .day .day-week-short {
  display: none;
}

#header .logo {
  max-width: 192px;
  z-index: 2;
  position: absolute;
  right: 0;
}

#header .title {
  text-indent: -9999px;
  margin: 0;
  height: 0;
  overflow: hidden;
}

#header:after {
  content:'';
  background-color: #2A2C5C;
  opacity: .95;
  position: fixed;
  top: 0;
  right: 60%;
  bottom: 0;
  /* ribbon offset */
  width: calc(220px + 2rem);
}

#header h3 {
  margin: 0.5rem;
  color: #FFF;
}

#header ul {
  margin: 0 0 1.5rem;
}

#header ul li .time {
  display: inline-block;
  min-width: 3.375rem;
  font-weight: bold;
  text-transform: uppercase;
  opacity: .5;
  padding-right: 0.5rem;
  margin-left: 0.25rem;
  border-radius: 2px;
}

#header ul li .time small {
  font-weight: normal;
  font-size: 85%;
}

.container-header {
  position: fixed;
  width: 40%;
  top: 0;
  bottom: 0;
  left: 0;
  background-color: #CCC;
  background-image: url('/pixels/bluebonnets.jpg');
  background-size: cover;
}

.container-article {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 40%;
  padding-right: 16.66666%;
}

.section-header--sponsored {
  margin-bottom: 4px;
}

.presented-by {
  font-size: 16px;
}

.time-header {
  font-weight: 500;
  margin-bottom: 0.25rem;
}

.innerheader {
  font-size: 26px;
  font-variant: smallcaps;
}

p strong {
  font-weight: bold;
}
p em {
  font-style: italic;
}

.speaker-list {
  padding: 10px 10px 10px 0;
}

.speaker-list img {
  max-height: 150px;
  max-width: 150px;
  width: 100%;
  background-color: #888;
  display: inline-block;
}
.speaker-list .speaker-label {
  display: block;
  margin-bottom: 0.5rem;
  text-align: center;
}
.speaker-list img {
  border: 3px solid #333;
  border-radius: 3px;
}

.food-header {
  font-size: 22px;
  margin-bottom: 0.5rem;
}
.food-note {
  font-size: 12px;
  padding-left: 10px;
  color: #555;
}
.food-group {
  margin-top: 0.5rem;
}
.food-group li a {
  font-size: 18px;
}

.row.small-bottom.big-space {
  margin-bottom: 10rem;
}

#menu .day {
  margin-right: 0.5rem;
}

#menu li a {
  color: #FFF;
  display: block;
  border-radius: 2px;
  text-decoration: none;
}

#menu li.alt a .time {
  background-color: rgba(255,255,255,.15);
}

#menu li a:hover {
  background-color: rgba(255,255,255,.25);
}

#menu li.active a,
#menu li.active a:hover {
  cursor: default;
  background-color: #E2273A;
}

#menu li a:hover .time,
#menu li.active a .time,
#menu li.active a:hover .time {
  opacity: 1;
}

#menu li.alt.active a .time {
  background-color: transparent;
}

.sponsors li {
  float: left;
  width: 50%;
  padding: 1rem;
  box-sizing: border-box;
}

.sponsors li a {
  display: block;
  height: 0;
  padding-bottom: 50%;
}

.sponsors li a img {
  display: block;
  margin: 0 auto;
  max-width: 100%;
  max-height: 7rem;
  object-fit: cover;
  opacity: .75;
  -webkit-filter: grayscale(1);
  filter: grayscale(1);
}

.sponsors li.sponsors-bocoup a img {
  max-height: 5rem;
}

.sponsors li a:hover img {
  opacity: 1;
  -webkit-filter: grayscale(0);
  filter: grayscale(0);
}

.row-title {
  background-color: #FFF;
  margin: 0 -2rem 3.5rem -3rem;
  padding: 1.5rem 2rem 0 2.5rem;
  box-shadow: 0 1px 2px rgba(38,50,54,0.07);
}

.row-title-date {
  margin: 0;
}

@media only screen and (max-width: 48em) {

  body {
    padding-left: 3rem;
  }

  .row {
    margin: 0;
  }

  .row-title {
    margin: 0 0 3.5rem -1rem;
    padding-left: 1rem;
  }

  .container-fluid {
    padding: 0;
  }

  .container-article {
    position: static;
    width: 100%;
    padding: 1rem;
    box-sizing: border-box;
  }

  .container-header,
  #header .ribbon #menu {
    width: 3rem;
  }

  #header:after {
    position: absolute;
    width: 100%;
    right: auto;
  }

  #header .ribbon {
    position: relative;
    width: 4rem;
    top: 4rem;
    padding: 0;
    z-index: 1;
  }

  #header .ribbon .day {
    margin: 0;
  }

  #header .ribbon .day:not(.active),
  #header .ribbon .day .thing,
  #header .ribbon .day .day-week,
  #header .ribbon .day .day-month {
    display: none;
  }

  #header .ribbon .day .day-week-short,
  #header .ribbon .day .day-date {
    font-weight: normal;
    line-height: 1;
    display: block;
    text-align: center;
  }

  #header .ribbon .day .day-date {
    font-size: 1.5rem;
  }

  #header .ribbon .day .time,
  #header .ribbon .day .time strong,
  #header .ribbon .day .time small {
    float: left;
    clear: both;
    line-height: 1;
    width: 3rem;
    text-align: center;
    margin: 0;
    min-width: 0;
  }

  #header .ribbon a {
    overflow: hidden;
    border-radius: 0;
  }

  #header .ribbon a .time {
    padding: .75rem 0;
  }

  .sponsors li.sponsors-bocoup a img {
    max-height: 3.5rem;
  }

}

#footer {
  margin-top: 100px;
}
